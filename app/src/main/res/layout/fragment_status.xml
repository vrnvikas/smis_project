<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context="com.onthespot.vikaskumar.miniproject.StatusFragment">

    <EditText
    android:id="@+id/status_edit_text_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <Button
        android:id="@+id/post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post"
        android:layout_alignRight="@+id/status_edit_text_box"
        android:layout_below="@+id/status_edit_text_box"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_status"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_button">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
